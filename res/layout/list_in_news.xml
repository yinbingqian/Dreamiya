<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/list_in_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#d5d5d5"
        android:gravity="center_horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="5月30日  下午10:17"
        android:textColor="@color/white"
        android:textSize="14dp"/>

    <LinearLayout
        android:id="@+id/list_in_journal_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marging15"
        android:background="@drawable/aswers_mm_listitem"
        android:orientation="vertical"
        android:padding="@dimen/marging10" >

        <RelativeLayout
            android:id="@+id/news_img_layout"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@+id/list_in_news_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/kids_photo"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="88dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" >

                <TextView
                    android:id="@+id/replay_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="3dp"
                    android:layout_marginRight="18dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/replay_count_tv"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/reply_icon_f" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/list_in_news_content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="同学们积极参与老师布置的手工作业..."
            android:textColor="#525252"
            android:textSize="17dp" />
    </LinearLayout>

</LinearLayout>