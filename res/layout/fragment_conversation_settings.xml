<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffb34b" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/bottomtitle04"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mime_layout_01"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/setting_bg"
        android:clickable="true" >

        <com.sxit.dreamiya.utils.settingimg.CircularImage
            android:id="@+id/mime_img_01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp" 
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/realname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mime_img_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="王洋"
            android:textColor="#ffffff"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/garden_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/realname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal"
            android:text="邮电设计院"
            android:textColor="#ffffff"
            android:textSize="17dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@drawable/usermainpage_bg_center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/mime_layout_04"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true" >

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="新消息设置"
                android:textColor="#525252"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/row_img_02"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/message_icon" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/mime_layout_05"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true" >

            <TextView
                android:id="@+id/update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="用户反馈"
                android:textColor="#525252"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/row_img_03"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/feedback_icon" />
        </RelativeLayout>
         <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/mime_layout_06"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:clickable="true" >

            <TextView
                android:id="@+id/reset_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="修改密码"
                android:textColor="#525252"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/row_img_06"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/password_icon" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="60dp"
        android:background="#ffffff"
        android:text="退出"
        android:textColor="#F75E5E"
        android:textSize="16sp" />

</LinearLayout>